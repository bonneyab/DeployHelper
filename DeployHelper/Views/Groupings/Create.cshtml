@model Contract.DTO.Grouping
@{
    ViewBag.Title = "Create Grouping";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-3" }) @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Owner, new { @class = "control-label col-sm-3" }) @Html.TextBoxFor(m => m.Owner, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.VendorActionRequired, new { @class = "control-label col-sm-3" }) @Html.CheckBoxFor(m => m.VendorActionRequired)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Weight, new { @class = "control-label col-sm-3" }) @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
}