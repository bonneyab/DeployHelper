@model List<Contract.DTO.Grouping>

<div class="modal fade" id="dependencyModal" tabindex="-1" role="dialog" aria-labelledby="dependencyModalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="dependencyModalTitle">New Dependency</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                        <select class="form-control" id="dependencyOptions">
                            @foreach (var dependency in Model)
                            {
                                <option value="@dependency.GroupingId">@dependency.Name</option>
                            }
                        </select>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveDependencyChanges">Add Dependency</button>
            </div>
        </div>
    </div>
</div>