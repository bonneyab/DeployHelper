@model Contract.DTO.Deployment
@{
    ViewBag.Title = "Create Deployment";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-2" }) @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "control-label col-sm-2" }) @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5"})
        </div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}